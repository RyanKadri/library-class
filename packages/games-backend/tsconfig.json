{
    "files": ["./src/games.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["dom", "es2018", "esnext.array"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "removeComments": true,
        "allowJs": true,
        "baseUrl": "./",

        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false, // This has to be turned off for now because of highlight.js weirdness
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "skipLibCheck": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true
    }
}